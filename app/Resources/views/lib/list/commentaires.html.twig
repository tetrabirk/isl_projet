<div class="reviews">
    {% for commentaire in commentaires %}
        <div class="review">
            <div class="review-image">
                {% if (commentaire.auteurCommentaire.getType()) == 'Internaute' %}
                    {% set avatar = commentaire.auteurCommentaire.avatar %}
                {% else %}
                    {% set avatar = commentaire.auteurCommentaire.logo %}
                {% endif %}
                <img src="{{ asset(avatar|showImage) }}" alt="">
            </div><!-- /.review-image -->

            <div class="review-inner">
                <div class="review-title">
                    <h2>{{ commentaire.auteurCommentaire }}</h2>

                    <span class="report">
                    <span class="separator">&#8226;</span>
                    <i class="fa fa-flag" title="Signaler un abus" data-toggle="tooltip" data-placement="top"></i>
                </span>

                    <div class="review-overall-rating">
                        <span class="overall-rating-title">{{ commentaire.encodage|date(' h:i d/m/Y') }}</span>
                        {% if (commentaire.auteurCommentaire.getType()) == 'Internaute' %}
                            {% include 'lib/stars.html.twig' with {'cote': commentaire.cote/10 } %}
                        {% endif %}
                    </div><!-- /.review-rating -->
                </div><!-- /.review-title -->
                <div class="review-content-wrapper">
                    <div class="review-content">
                        <h4>{{ commentaire.titre }}</h4>
                        <p>{{ commentaire.contenu }}</p>
                    </div><!-- /.review-content -->

                </div><!-- /.review-content-wrapper -->

            </div><!-- /.review-inner -->
        </div><!-- /.review -->
    {% endfor %}
</div><!-- /.reviews -->
