<div class="mb80">
    <div class="hero-slider">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner" role="listbox">

                {% for categ in categories %}
                {% if loop.first %}
                <div class="item active">
                    {% else %}
                    <div class="item">
                        {% endif %}
                        <a href="{{ path('services',{'slug': categ.slug}) }}">
                            <div class="item-bg"
                                 style="background-image: url('{{ asset('img/') }}{{ categ.image.nom|tempDevImage }}')"></div>

                            <img src="{{ asset('img/') }}{{ categ.image.nom|tempDevImage }}" alt="">


                            <div class="carousel-caption">
                                <div class="hero-slider-content">
                                    <h1>{{ categ.nom|capitalize }}</h1>

                                </div><!-- /.hero-slider-content -->

                            </div><!-- /.carousel-caption -->
                        </a>
                    </div><!-- /.item -->
                    {% endfor %}

                </div><!-- /.carousel-inner -->

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button"
                   data-slide="prev">
                    <i class="fa fa-long-arrow-left"></i>
                </a>

                <a class="right carousel-control" href="#carousel-example-generic" role="button"
                   data-slide="next">
                    <i class="fa fa-long-arrow-right"></i>
                </a>
            </div>
        </div><!-- /.hero-slider -->

    </div>
