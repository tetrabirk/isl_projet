{{ form_start(form) }}
<h3 class="page-title">
        {% if stage.nom is not null %}
            {{ stage.nom }}
        {% else %}
            Nouveau Stage
        {% endif %}

    {{ form_widget(form.enregistrer, {'attr':{'class':'btn-primary btn-xs pull-right'}}) }}
</h3>
<div class="row">

    <div class="form-group col-sm-12">
        {{ form_errors(form) }}
    </div>

    <div class="form-group col-sm-12">
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom) }}
    </div>
    <div class="form-group col-sm-12">
        {{ form_label(form.description) }}
        {{ form_widget(form.description) }}
    </div>
    <div class="form-group col-sm-3">
        {{ form_label(form.tarif) }}
        {{ form_widget(form.tarif) }}
    </div>

    <div class="form-group col-sm-12">
        {{ form_label(form.infoComplementaire) }}
        {{ form_widget(form.infoComplementaire) }}
    </div>
    <div class="form-group col-sm-6">
        {{ form_label(form.debut) }}
        {{ form_widget(form.debut) }}
    </div>
    <div class="form-group col-sm-6">
        {{ form_label(form.fin) }}
        {{ form_widget(form.fin) }}
    </div>
    <div class="form-group col-sm-6">
        {{ form_label(form.affichageDe) }}
        {{ form_widget(form.affichageDe) }}
    </div>
    <div class="form-group col-sm-6">
        {{ form_label(form.affichageJusque) }}
        {{ form_widget(form.affichageJusque) }}
    </div>


</div>
{{ form_end(form) }}