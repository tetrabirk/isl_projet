{% extends "profil/profil_base.html.twig" %}

{% block imgProfil %}{{ app.user.avatar.nom|tempDevImage }}{% endblock %}
{% block txtModifImg %}Modifier mon avatar{% endblock %}

{% block widgets %}

    <div class="widget">
        <div class="menu-advanced">
            <div>Newsletter
            {% if app.user.newsletter == false %}
            <a class="btn-primary btn-xs pull-right mt-5" href="#">S'abonner</a>
        {% else %}
            <a class="btn-danger btn-xs pull-right mt-5" href="#"> Se DÃ©sabonner</a>
            {% endif %}
            </div>
        </div>
    </div><!-- /.widget -->
{% endblock %}

{% block menuOptions %}
{% endblock %}

{% block nomProfil %}
    <h1>{{ app.user.prenom|capitalize~' '~app.user.nom|capitalize }}

    </h1>
{% endblock %}

{% block form %}
    {{ form_start(form) }}
    <h3 class="page-title">
        Infos Globales

        {{ form_widget(form.enregistrer, {'attr':{'class':'btn-primary btn-xs pull-right'}}) }}
    </h3>
    <div class="row">

        <div class="form-group col-sm-12">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
        </div>
        <div class="form-group col-sm-6">
            {{ form_label(form.prenom) }}
            {{ form_widget(form.prenom) }}
        </div>
        <div class="form-group col-sm-6">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom) }}
        </div>



        {#affichage adresse#}
        <div class="form-group col-sm-9">
            {{ form_label(form.adresseRue) }}
            {{ form_widget(form.adresseRue) }}
        </div>
        <div class="form-group col-sm-3">
            {{ form_label(form.adresseNum) }}
            {{ form_widget(form.adresseNum) }}
        </div>
        <div class="form-group col-sm-3">
            {{ form_label(form.localite.codePostal) }}
            {{ form_widget(form.localite.codePostal) }}
        </div>
        <div class="form-group col-sm-9">
            {{ form_label(form.localite.localite) }}
            {{ form_widget(form.localite.localite) }}
        </div>

    </div>
    {{ form_end(form) }}

{% endblock %}


