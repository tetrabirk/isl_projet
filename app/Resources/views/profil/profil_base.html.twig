{% extends "index.html.twig" %}

{% if app.user %}
    {% set utilisateur = app.user %}
{% else %}
    {% set utilisateur = newUser %}
{% endif %}



{% block content %}

    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-lg-3">
                        <div class="sidebar">
                            <div id="form_image" class="widget">
                                <div class="user-photo">
                                    <a href="#">
                                        <img src="{% block imgProfil %}{% endblock %}"
                                             alt="User Photo">
                                        <span class="user-photo-action">{% block txtModifImg %}{% endblock %}</span>
                                    </a>
                                </div><!-- /.user-photo -->
                            </div><!-- /.widget -->


                            <div class="widget">

                                <div class="menu-advanced">
                                    <div>Membre depuis le {{ utilisateur.Inscription|date('d-m-Y') }}</div>
                                </div>
                            </div><!-- /.widget -->
                            {% block widgets %}

                            {% endblock %}
                            <div class="widget">
                                <ul class="menu-advanced">
                                    {% block menuOptions %}

                                    {% endblock %}
                                    <li class="active"><a href="{{ path('profil') }}"><i class="fa fa-user"></i>
                                            Modifier Profil</a></li>
                                    <li><a href="{{ path('mot_de_passe') }}"><i class="fa fa-key"></i> Mot de passe</a>
                                    </li>
                                    <li><a href="{{ path('deconnexion') }}"><i class="fa fa-sign-out"></i>
                                            DÃ©connexion</a></li>
                                    <li><a href="{{ path('profil_suppression') }}"><i class="fa fa-trash-o"></i>
                                            Supprimer le profil</a></li>
                                </ul>
                            </div><!-- /.widget -->

                        </div><!-- /.sidebar -->
                    </div><!-- /.col-* -->

                    <div class="col-sm-8 col-lg-9">
                        <div class="content">
                            <div class="page-title">
                                {% block nomProfil %}
                                {% endblock %}
                                {% block subTitle %}
                                {% endblock %}
                            </div><!-- /.page-title -->
                            {% block content_profil %}
                                <div class="background-white p20 mb30">
                                    {% block form %}

                                    {% endblock %}
                                </div>
                            {% endblock %}

                        </div><!-- /.content -->
                    </div><!-- /.col-* -->
                </div><!-- /.row -->
            </div><!-- /.container -->
        </div><!-- /.main-inner -->
    </div><!-- /.main -->

{% endblock %}