{% extends "index.html.twig" %}

{% block title %}{{ service.nom }}{% endblock %}

{% block content %}

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="content">

                <div class="document-title" data-background-image="{{ asset(service.image|showImage) }}">
                    <h1>{{ service.nom }}</h1>
                </div><!-- /.document-title -->

                <p>
                    {{ service.description }}
                </p>

                <h2>Prestataires proposant ce service</h2>


                {{ render(controller(
                'AppBundle:Prestataire:prestatairesByCateg',
                {'categ': service }
                )) }}



            </div><!-- /.content -->
        </div><!-- /.container -->
    </div><!-- /.main-inner -->
</div><!-- /.main -->

{% endblock %}
