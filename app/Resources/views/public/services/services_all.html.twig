{% extends "index.html.twig" %}

{% block title %}Categories de Services{% endblock %}


{% block content %}

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="content">

                <div class="document-title">
                    <h1>Categories de Services</h1>

                </div><!-- /.document-title -->

                <div class="cards-simple-wrapper">
                    <div class="row">
                        {% for service in services %}
                        <div class="col-sm-6 col-md-4 col-lg-3">
                            <div class="card-simple" data-background-image="{{asset('img/')~service.image.nom|tempDevImage}}">
                                <div class="card-simple-background">
                                    <a href="{{ path('services',{'slug': service.slug}) }}">
                                    <div class="card-simple-content">
                                        <h2>{{ service.nom|capitalize }}<br/><br/></h2>
{#TODO : get nbre de prestataire#}
                                        <div class="card-simple-actions">
                                            <h4>XXX prestataires</h4>
                                        </div><!-- /.card-simple-actions -->
                                    </div><!-- /.card-simple-content -->

                                    </a>
                                </div><!-- /.card-simple-background -->
                            </div><!-- /.card-simple -->
                        </div><!-- /.col-* -->
                        {% endfor %}
                    </div><!-- /.row -->
                </div><!-- /.cards-simple-wrapper -->

            </div><!-- /.content -->
        </div><!-- /.container -->
    </div><!-- /.main-inner -->
</div><!-- /.main -->

{% endblock %}
