{% extends "index.html.twig" %}

{% block content %}

    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="content">


                    <div class="row">
                        <div class="col-sm-4 col-sm-offset-4">
                            <div class="page-title">
                                <h1>Inscription</h1>
                            </div><!-- /.page-title -->

                            {% for message in app.flashes('notifications') %}
                                <div class="alert-success p30 col">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            {{ form_start(form) }}
                            {{ form_errors(form) }}
                            {{ form_label(form.type) }}
                            {{ form_widget(form.type) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.motDePasseNonCripte) }}

                            {{ form_end(form) }}
                        </div><!-- /.col-sm-4 -->
                    </div><!-- /.row -->

                </div><!-- /.content -->
            </div><!-- /.container -->
        </div><!-- /.main-inner -->
    </div><!-- /.main -->


{% endblock %}